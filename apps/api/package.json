{
  "name": "@repo/api",
  "description": "Blisko API server (Hono + tRPC + Better Auth)",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@hono/node-server": "^1.19.9",
    "@hono/trpc-server": "^0.3.0",
    "@repo/shared": "workspace:*",
    "@trpc/server": "^11.0.0-rc.0",
    "ai": "^6.0.86",
    "better-auth": "^1.4.17",
    "bullmq": "^5.69.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.5.0",
    "pg": "^8.17.2",
    "postgres": "^3.4.0",
    "resend": "^6.8.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^20.14.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.16.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
